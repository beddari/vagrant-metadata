{
  "editor.codeActionsOnSave": { "source.organizeImports": true },
  "editor.formatOnSave": true,
  "editor.rulers": [88],
  "python.formatting.provider": "black",
  "python.pythonPath": "venv/bin/python3",
  "python.sortImports.args": [
    "--multi-line=3",
    "--trailing-comma",
    "--force-grid-wrap=0",
    "--use-parentheses",
    "--line-width=88"
  ]
}
